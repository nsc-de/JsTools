{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "cache": true,
      "dependsOn": ["^build"],
      "outputs": ["lib/**"],
      "inputs": ["src/**/*", "lib/**/*"]
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"]
    },
    "test": {
      "cache": true,
      "dependsOn": ["build"],
      "inputs": ["src/**/*", "lib/**/*"]
    },
    "lint": {
      "cache": true,
      "inputs": ["src/**/*"]
    },
    "typedoc": {
      "cache": false,
      "inputs": ["src/**/*", "lib/**/*", "typedoc.config.js", "README.md"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
