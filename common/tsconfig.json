{
  "compilerOptions": {
    "sourceMap": true,
    "module": "CommonJS",
    "target": "ES2018",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipDefaultLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES6"],
    "removeComments": true,
    "skipLibCheck": true
  }
}
